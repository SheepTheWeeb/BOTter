<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="build/app.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^build/app.js\/debug[\/]?" />
        </rule>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="build/app.js" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>